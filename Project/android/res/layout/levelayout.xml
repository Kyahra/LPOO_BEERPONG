<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/background" />

    <ImageButton
        android:id="@+id/easyButton"
        android:layout_width="230dp"
        android:layout_height="102dp"
        android:layout_marginStart="16dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/easy3"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/background"
        android:layout_marginBottom="24dp"
        app:layout_constraintVertical_bias="0.096" />

    <ImageButton
        android:id="@+id/normalButton"
        android:layout_width="257dp"
        android:layout_height="112dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:layout_constraintRight_toRightOf="@+id/easyButton"
        app:srcCompat="@drawable/medium"
        tools:ignore="MissingConstraints"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/easyButton"
        app:layout_constraintHorizontal_bias="0.481"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@+id/easyButton" />

    <ImageButton
        android:id="@+id/difficultButton"
        android:layout_width="227dp"
        android:layout_height="95dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/hard"
        tools:ignore="MissingConstraints"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/normalButton"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/normalButton"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/normalButton" />


    <ImageView
        android:id="@+id/beerponglabel"
        android:layout_width="246dp"
        android:layout_height="203dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/woodbeerpong"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/difficultButton"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/difficultButton"
        app:layout_constraintHorizontal_bias="0.666"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/difficultButton"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.693" />
</android.support.constraint.ConstraintLayout>

