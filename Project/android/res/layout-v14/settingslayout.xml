<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:weightSum="1">

    <ImageView
        android:id="@+id/background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/background" />

    <ImageView
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/settings"
        app:layout_constraintTop_toTopOf="@+id/background"
        android:layout_marginTop="51dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.494" />

    <CheckBox
        android:id="@+id/checkBoxMusic"
        style="@style/Theme.AppCompat.DayNight.DarkActionBar"
        android:layout_width="31dp"
        android:layout_height="35dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="29dp"
        android:layout_marginTop="8dp"
        android:scaleX="2"
        android:scaleY="2"
        app:buttonTint="@android:color/background_dark"
        app:layout_constraintBottom_toBottomOf="@+id/music"
        app:layout_constraintRight_toLeftOf="@+id/music"
        app:layout_constraintTop_toTopOf="@+id/music" />


    <CheckBox
        android:id="@+id/checkBoxSound"
        style="@style/Theme.AppCompat.DayNight.DarkActionBar"
        android:layout_width="31dp"
        android:layout_height="35dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="29dp"
        android:layout_marginTop="21dp"
        android:scaleX="2"
        android:scaleY="2"
        app:buttonTint="@android:color/background_dark"
        app:layout_constraintBottom_toBottomOf="@+id/sound"
        app:layout_constraintRight_toLeftOf="@+id/sound"
        app:layout_constraintTop_toTopOf="@+id/sound"
        app:layout_constraintVertical_bias="0.441" />

    <ImageView
        android:id="@+id/music"
        android:layout_width="210dp"
        android:layout_height="107dp"
        app:srcCompat="@drawable/music"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/settings"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/settings"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@+id/settings"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/sound"
        android:layout_width="210dp"
        android:layout_height="107dp"
        app:srcCompat="@drawable/sound"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/music"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/music"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="210dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/music"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>